                    }

                body {
                         margin: 0;
                         background: gray;
                        font-family: Arial;
                        display: flex;
                        flex-direction:column;
                        min-height: 100vh;
                     }

                nav {
                        background: #594848;
                        width: 100%;
                        overflow: auto;
                     }

                    nav ul {
